<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 네트워크 통신을 위해 반드시 추가 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 하드웨어 기능 선언 (경고 해결용) -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 위치 권한 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- 🔧 권한 추가 (기존 권한들과 함께) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <!-- 🔥 Android 13+ 알림 권한 추가 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Android 12+ 백그라운드 오디오 녹음을 위한 권한 -->
    <uses-permission android:name="android.permission.HIGH_SAMPLING_RATE_SENSORS" />

    <!-- 마이크 하드웨어 요구사항 -->
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nolbom"
        tools:targetApi="31"
        android:name=".NolbomApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Nolbom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDQQGSIvGXmPAUUDX4AsMuBsjKVkCQUagg" />

        <!-- 카카오 지도·로그인 등 SDK 전반에 쓰이는 네이티브 앱 키 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="43dc42fa64bbd715fef5f7cffc8cceda" />
        <!-- 카카오맵 전용 앱 키 (Vector Map용) -->
        <meta-data
            android:name="com.kakao.vectormap.APP_KEY"
            android:value="43dc42fa64bbd715fef5f7cffc8cceda" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <!-- 🔧 실시간 음성 감지 서비스 수정 -->
        <service
            android:name=".utils.RealtimeVoiceService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone"
            android:stopWithTask="false" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


</manifest>